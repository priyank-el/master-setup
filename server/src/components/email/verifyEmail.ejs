<!-- acceptReject.html -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link rel="stylesheet" href="">
</head>

<body
    style="font-family: 'Rubik', sans-serif; margin: 0px;padding-top: 0;padding-bottom: 0;padding-top: 0;padding-bottom: 0;background-color: #f1f1f1;background-repeat: repeat;width: 100% !important;-webkit-text-size-adjust: 100%;-ms-text-size-adjust: 100%;-webkit-font-smoothing: antialiased;">
    <style type="text/css">
        @import url('https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;600;700;800;900&display=swap');
    </style>
    <table style="max-width: 600px; width: 600px; margin: 0px auto;" cellpadding="0" cellspacing="0">
        <tbody>
            <tr>
                <td style="padding-top: 50px; padding-bottom: 50px;">
                    <table width="100%" height="100%" cellpadding="0" cellspacing="0" align="left">
                        <tbody>
                            <tr>
                                <td style="padding: 0; background-color: #fff; border-radius: 10px;">
                                    <table style="width: 100%;" cellpadding="0" cellspacing="0">
                                        <tbody>
                                            <tr>
                                                <td style="padding: 15px; padding-bottom: 40px;" align="center">
                                                    <table style="width: 100%;" cellpadding="0" cellspacing="0">
                                                        <tr>
                                                            <td align="center"
                                                                style="padding: 40px 20px; border-radius: 10px;">
                                                                <img src="<%- logo %>" alt=""
                                                                    style="width: 200px;">
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 0px 50px;">
                                                    <table style="width: 100%;" cellpadding="0" cellspacing="0">
                                                        <tr>
                                                            <td style="padding-bottom: 20px;">
                                                                <h1
                                                                    style="font-size: 20px; font-weight: 600; color: #000000; margin: 0; margin-bottom: 30px; font-family: 'Rubik', sans-serif; text-align: center;">
                                                                    Email Verification</h1>
                                                                <p
                                                                    style="font-family: 'Rubik', sans-serif;font-size: 14px; font-weight: 400; line-height: 20px; color: #637b96; margin: 0; letter-spacing: 0.5px; line-height: 24px; ">
                                                                    Hello, <b
                                                                        style="font-family: 'Rubik', sans-serif; font-size: 14px; font-weight: 600; color: #333333;"><%- name%></b>.
                                                                </p>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td style="padding-bottom: 20px;">
                                                                <p
                                                                    style="font-family: 'Rubik', sans-serif;font-size: 14px; font-weight: 400; line-height: 20px; color: #637b96; margin: 0; letter-spacing: 0.5px; line-height: 24px; ">
                                                                    You have received this email for verify your email KYT ,
                                                                    and your email has been successfully changed.</p>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td style="padding-bottom: 50px;">
                                                                <br>
                                                                <div
                                                                    style="display: block; font-family: 'Rubik', sans-serif;">
                                                                    <p
                                                                        style="font-size: 14px; font-family: 'Rubik', sans-serif; font-weight: 400; line-height: 20px; color: #637b96;margin: 0; letter-spacing: 0.5px; line-height: 24px;">
                                                                        Regards, KYT</p>
                                                                    <p style="font-size: 14px; font-family: 'Rubik', sans-serif; font-weight: 400; line-height: 20px; color: #637b96;margin: 0; letter-spacing: 0.5px; line-height: 24px;">
                                                                        <a href="<%- acceptLink %>"
                                                                            style="color: #637b96; text-decoration: none;">Accept</a>
                                                                        <a href="<%- rejectLink %>"
                                                                            style="color: #637b96; text-decoration: none;">Reject</a>
                                                                    </p>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
</body>

</html>
